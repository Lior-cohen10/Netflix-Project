<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    tools:context=".activities.HomeActivity">

    <!-- Toolbar that will always be visible -->
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#000000"
        android:elevation="4dp"
        app:layout_scrollFlags="scroll|enterAlways|snap">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorBackground"
            android:padding="10dp"
            android:layout_marginLeft="0dp"
            app:tint="@color/colorText"
            android:src="@drawable/ic_home"/>

        <SearchView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:iconifiedByDefault="true"
            android:ems="10"
            android:queryHint="Search here"
            android:textColorHint="@android:color/white"
            android:queryBackground="@android:color/transparent"
            android:textColor="#FFFFFF"/>

        <ImageButton
            android:id="@+id/admin"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorBackground"
            android:padding="10dp"
            android:layout_marginLeft="190dp"
            app:tint="@color/colorText"
            android:src="@drawable/ic_admin"/>

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorBackground"
            android:padding="10dp"
            app:tint="@color/colorText"
            android:src="@drawable/ic_exit"/>
    </Toolbar>

    <!-- AppBarLayout with PlayerView, limited height to prevent video hiding Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true"
        android:background="#6B6868"
        app:layout_scrollFlags="scroll|enterAlways">

        <Button
            android:id="@+id/btnCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Categories↓"
            android:textColor="@color/colorText"
            android:backgroundTint="@color/colorInput"
            android:strokeColor="@color/colorBackground"
            app:layout_scrollFlags="scroll|enterAlways"/>

        <!-- PlayerView (video) with fixed size -->
        <androidx.media3.ui.PlayerView
            android:id="@+id/random_movie"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:resize_mode="fit"
            app:layout_scrollFlags="scroll|enterAlways"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- RecyclerView for categories -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lstCategories"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- RecyclerView for searched movies -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchedMovies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:background="@color/colorBackground"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
