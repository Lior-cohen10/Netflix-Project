<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".activity.ManagmentActivity">



    <android.widget.ViewFlipper
        android:id="@+id/ViewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="16dp">

            <Button
                android:id="@+id/showCreateMovieViewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#A91616"
                android:text="Create Movie View"
                android:textColor="#FBF8F8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/showDeleteMovieViewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Movie View"
                android:backgroundTint="#A91616"
                android:textColor="#FBF8F8"
                app:layout_constraintTop_toBottomOf="@id/showCreateMovieViewButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="16dp">

            <EditText
                android:id="@+id/movieNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/managerCreate_movie_name"
                android:inputType="textMultiLine"
                android:autofillHints="name"/>

            <EditText
                android:id="@+id/movieYearInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/managerCreate_year"
                android:inputType="textMultiLine"
                android:autofillHints="year"/>

            <EditText
                android:id="@+id/movieTimeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/managerCreate_time"
                android:inputType="textMultiLine"
                android:autofillHints="time"/>

            <EditText
                android:id="@+id/movieDescriptionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/managerCreate_description"
                android:inputType="textMultiLine"
                android:autofillHints="description"/>

            <ImageView
                android:id="@+id/imageViewProfilePic"
                android:layout_width="94dp"
                android:layout_height="89dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Profile Picture"
                android:src="@android:color/transparent"/>


            <Button
                android:id="@+id/btnChooseImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="Choose Picture"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="0dp"
                android:focusable="false"
                android:clickable="true"/>

            <Button
                android:id="@+id/btnChooseVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="Choose Video"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="0dp"
                android:focusable="false"
                android:clickable="true" />


            <Button
                android:id="@+id/createMovieButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#A91616"
                android:textColor="#FBF8F8"
                android:text="@string/manager_create_movie" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/movieIdInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/manager_movie_id"
                android:inputType="textMultiLine"
                android:autofillHints="id"/>

            <TextView
                android:text="Are you sure you want to delete this movie?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/deleteMovieButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#A91616"
                android:textColor="#FBF8F8"
                android:text="@string/manager_delete_movie" />
        </LinearLayout>

